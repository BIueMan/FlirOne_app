<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.samples.flironecamera">
    <!-- some hw might not support Usb Host mode so it's recommended to add this -->
    <uses-feature android:name="android.hardware.usb.host" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_thermal_camera"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_thermal_camera_circle"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ChangeThermalMode"></activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>